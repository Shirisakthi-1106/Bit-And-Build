<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Organizer Login</title>
    <link rel="stylesheet" href="/styles/style.css"> <!-- Add your CSS file path -->
</head>
<body>
    <div class="container">
        <h1>Organizer Login</h1>
        
        <% if (error_msg.length > 0) { %>
            <div class="alert alert-danger">
                <ul>
                    <% error_msg.forEach(function(msg) { %>
                        <li><%= msg %></li>
                    <% }); %>
                </ul>
            </div>
        <% } %>
        
        <% if (success_msg.length > 0) { %>
            <div class="alert alert-success">
                <ul>
                    <% success_msg.forEach(function(msg) { %>
                        <li><%= msg %></li>
                    <% }); %>
                </ul>
            </div>
        <% } %>
        
        <form action="/organizer-login" method="POST">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" name="email" id="email" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" name="password" id="password" required>
            </div>
            <button type="submit">Login</button>
        </form>
        
        <p>Not an organizer? <a href="/login">Login as an attendee</a></p>
    </div>
</body>
</html>
