<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <script>
        function registerForEvent(eventId) {
            // Redirect to the slot booking page for the selected event
            window.location.href = `/event/${eventId}`;
        }
    </script>
</head>
<body>
    <h1>Event Dashboard</h1>
    <h2>Upcoming Events</h2>
    <ul>
        <% events.forEach(event => { %>
            <li>
                <strong><%= event.title %></strong><br>
                Date: <%= new Date(event.date).toDateString() %><br>
                Location: <%= event.location %><br>
                Description: <%= event.description %><br>
                <button onclick="registerForEvent('<%= event._id %>')" style="background-color: blue; color: white; padding: 10px 15px; border: none; cursor: pointer;">
                    Register
                </button>
            </li>
        <% }); %>
    </ul>
</body>
</html>
